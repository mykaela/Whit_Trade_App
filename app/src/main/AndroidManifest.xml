<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hendrix.whit_trade_app">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BooksPageActivity"
            android:label="@string/title_activity_books_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegistorPageActivity"
            android:label="@string/title_activity_registor_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CalssifiedActivity"
            android:label="@string/title_activity_calssified"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MessagesActivity"
            android:label="@string/title_activity_messages"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
